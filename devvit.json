{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "build-a-rig",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },

  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "build-a-rig",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "build_a_rig_dev"
  }
}